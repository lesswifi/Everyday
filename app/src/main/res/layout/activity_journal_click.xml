<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_journal_click"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="compsci290.edu.duke.everyday.JournalClickActivity">

    <android.support.design.widget.FloatingActionButton
        app:fabSize="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        app:backgroundTint="@color/colorPrimaryDark"
        app:elevation="5dp"
        android:src="@drawable/ic_mode_edit_white_24dp"
        android:id="@+id/floatingActionButton" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView style="@style/EntryTitle"
            android:id="@+id/journal_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Title"/>

        <TextView style="@style/EntryTitle"
            android:id="@+id/journal_tag"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Title"/>

        <TextView style="@style/EntryContent"
            android:id="@+id/journal_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Saturday April 8, 12:06 pm"/>

        <TextView style="@style/EntryContent"
            android:id="@+id/journal_date"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:text="here's a note about something"/>

    </LinearLayout>

</RelativeLayout>
